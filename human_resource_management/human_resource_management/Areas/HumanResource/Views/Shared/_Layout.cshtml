<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Cổng Thông Tin Nhân Viên</title>
    <!-- Thiết kế & Font chữ (Tailwind & Inter Font) -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f3f4f6; /* gray-100 */
        }
        .nav-item.active {
            background-color: #eff6ff; /* blue-50 */
            color: #2563eb; /* blue-600 */
            border-right: 3px solid #2563eb;
        }

        .nav-item:hover:not(.active) {
            background-color: #f9fafb; /* gray-50 */
            color: #1f2937; /* gray-800 */
        }
        
        /* Animation fade-in cho noi dung */
        .animate-fade-in {
            animation: fadeIn 0.5s ease-in-out;
        }
        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Toast Notification Animation */
        @@keyframes toastIn {
            from { transform: translateX(100%); opacity: 0; }
            to { transform: translateX(0); opacity: 1; }
        }
        .animate-toast-in {
            animation: toastIn 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards;
        }
        
        @@keyframes progress {
            from { width: 100%; }
            to { width: 0%; }
        }
        .animate-progress {
            animation: progress 5s linear forwards;
        }
    </style>
    <!-- Khu vực nhúng CSS riêng của từng View -->
    @RenderSection("styles", required: false)
</head>
<body class="bg-gray-100 min-h-screen flex text-sm">

    <!-- Sidebar (Thanh điều hướng bên trái) -->
    <aside class="w-64 bg-white shadow-xl hidden md:flex flex-col fixed inset-y-0 z-50 transition-all duration-300">
        <!-- Khu vực Logo Hệ thống -->
        <div class="h-16 flex items-center justify-center border-b border-gray-100">
            <div class="flex items-center gap-2 text-blue-600">
                <i class="fa-solid fa-users-gear text-2xl"></i>
                <span class="text-xl font-bold tracking-tight text-gray-800">HRM System</span>
            </div>
        </div>

        <!-- Danh sách menu điều hướng -->
        <nav class="flex-1 overflow-y-auto py-6 px-3 space-y-1">
            <p class="px-3 text-xs font-semibold text-gray-400 uppercase tracking-wider mb-2">Chức năng chính</p>

            <!-- Menu: Trang chủ -->
            <a href="@Url.Action("Index", "Home", new { area = "HumanResource" })"
               class="nav-item flex items-center px-4 py-3 text-gray-600 rounded-lg transition-colors group">
                <i class="fa-solid fa-house w-6 text-center group-hover:scale-110 transition-transform"></i>
                <span class="font-medium">Trang chủ</span>
            </a>

            <!-- Menu: Quản lý nhân viên -->
            <a href="@Url.Action("ManagerEmployee", "Home", new { area = "HumanResource" })"
               class="nav-item flex items-center px-4 py-3 text-gray-600 rounded-lg transition-colors group">
                <i class="fa-solid fa-user-tag w-6 text-center group-hover:scale-110 transition-transform"></i>
                <span class="font-medium">Quản lý nhân viên</span>
            </a>

            <!-- Menu: Quản lý lương -->
            <a href="@Url.Action("Salary", "Home", new { area = "HumanResource" })"
               class="nav-item flex items-center px-4 py-3 text-gray-600 rounded-lg transition-colors group">
                <i class="fa-solid fa-calendar-days w-6 text-center group-hover:scale-110 transition-transform"></i>
                <span class="font-medium">Quản lý lương</span>
            </a>

            <!-- Menu: Thống kê báo cáo -->
            <a href="@Url.Action("Statistical", "Home", new { area = "HumanResource" })"
               class="nav-item flex items-center px-4 py-3 text-gray-600 rounded-lg transition-colors group">
                <i class="fa-solid fa-file-invoice-dollar w-6 text-center group-hover:scale-110 transition-transform"></i>
                <span class="font-medium">Thống kê</span>
            </a>
        </nav>
    </aside>
    <!-- Header cho bản Mobile -->
    <div class="md:hidden fixed w-full bg-white z-50 border-b border-gray-200 h-16 flex items-center justify-between px-4">
        <span class="font-bold text-lg text-gray-800">HRM Employee</span>
        <button class="text-gray-600 focus:outline-none">
            <i class="fa-solid fa-bars text-xl"></i>
        </button>
    </div>
    <!-- Container nội dung chính bên phải -->
    <div class="flex-1 md:ml-64 flex flex-col min-h-screen transition-all duration-300">

        <!-- Top Header (Thanh công cụ trên cùng) -->
        <header class="bg-white shadow-sm h-16 flex items-center justify-between px-6 sticky top-0 z-40">
            <!-- Hiển thị tiêu đề động từ ViewBag -->
            <h1 class="text-xl font-semibold text-gray-800">@ViewBag.Title</h1>

            <!-- Khu vực thông tin người dùng & Đăng xuất -->
            <div class="flex items-center space-x-4">
                @using (Html.BeginForm("Logout", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm" }))
                {
                    @Html.AntiForgeryToken()
                    <button type="submit" class="flex items-center gap-2 text-red-600 hover:text-red-700 font-medium text-sm bg-red-50 hover:bg-red-100 px-3 py-2 rounded-lg transition-colors">
                        <i class="fa-solid fa-arrow-right-from-bracket"></i>
                        <span>Đăng xuất</span>
                    </button>
                }
            </div>
        </header>
        <!-- Main Content Area -->
        <main class="flex-1 p-6 overflow-y-auto">
            <div class="max-w-7xl mx-auto">
                <!-- Hiển thị thông báo thành công (nếu có) -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div id="success-alert" class="fixed top-20 right-6 z-[100] animate-toast-in">
                        <div class="bg-white border-l-4 border-green-500 shadow-2xl rounded-2xl p-5 flex items-center gap-4 min-w-[350px] relative overflow-hidden group">
                            <!-- Hiệu ứng nền nhẹ -->
                            <div class="absolute inset-0 bg-green-50/30 opacity-0 group-hover:opacity-100 transition-opacity"></div>
                            
                            <!-- Icon thành công -->
                            <div class="w-12 h-12 bg-green-100 text-green-600 rounded-xl flex items-center justify-center flex-shrink-0 shadow-sm relative z-10">
                                <i class="fa-solid fa-check text-xl"></i>
                            </div>
                            
                            <!-- Nội dung thông báo -->
                            <div class="flex-1 z-10">
                                <h4 class="font-bold text-gray-900 text-base">Thành công!</h4>
                                <p class="text-sm text-gray-600 font-medium">@TempData["SuccessMessage"]</p>
                            </div>
                            
                            <!-- Nút đóng -->
                            <button onclick="document.getElementById('success-alert').remove()" class="text-gray-400 hover:text-gray-600 transition-colors p-1 z-10">
                                <i class="fa-solid fa-xmark text-lg"></i>
                            </button>
                            
                            <!-- Thanh tiến trình (Progress bar) -->
                            <div class="absolute bottom-0 left-0 h-1 bg-green-500 animate-progress w-full"></div>
                        </div>
                    </div>
                }

                <!-- Hiển thị thông báo lỗi (nếu có) -->
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="mb-4 bg-red-50 border-l-4 border-red-500 p-4 rounded shadow-sm">
                        <div class="flex">
                            <i class="fa-solid fa-circle-exclamation text-red-500 mt-0.5"></i>
                            <div class="ml-3">
                                <p class="text-sm text-red-700 font-medium">@TempData["ErrorMessage"]</p>
                            </div>
                        </div>
                    </div>
                }

                <!-- Nơi các View con sẽ được hiển thị -->
                @RenderBody()
            </div>
        </main>

        <!-- Footer của Layout -->
        <footer class="bg-white border-t border-gray-200 py-4 px-6 text-center">
            <div class="text-xs text-gray-500">
                &copy; @DateTime.Now.Year Hệ thống Quản lý Nhân sự
            </div>
        </footer>
    </div>

    <!-- Scripts thư viện cơ bản -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>

    <!-- Script quản lý trạng thái Active Menu và Auto-hide Alert -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // 1. Xử lý Active Menu (Thông minh hơn để tránh highlight nhầm nhiều mục)
            const currentPath = window.location.pathname.toLowerCase().replace(/\/$/, "");
            const navLinks = document.querySelectorAll('.nav-item');
            
            let bestMatch = null;
            let maxLen = -1;

            navLinks.forEach(link => {
                let href = link.getAttribute('href').toLowerCase().replace(/\/$/, "");
                link.classList.remove('active');

                // Loại bỏ /Index hoặc /Home/Index ở cuối để so sánh chuẩn hơn
                const cleanHref = href.replace(/\/index$/, "");
                const cleanPath = currentPath.replace(/\/index$/, "");

                // Ưu tiên so khớp chính xác
                if (cleanPath === cleanHref) {
                    bestMatch = link;
                    maxLen = 9999; 
                } 
                // Nếu không khớp chính xác, thử so khớp tiền tố (cho các trang con)
                // Nhưng chỉ chấp nhận nếu là tiền tố hợp lệ (theo sau bởi / hoặc ?)
                else if (currentPath.startsWith(href + "/") || currentPath.startsWith(href + "?")) {
                    if (href.length > maxLen) {
                        maxLen = href.length;
                        bestMatch = link;
                    }
                }
            });

            if (bestMatch) {
                bestMatch.classList.add('active');
            }

            // 2. Tự động ẩn thông báo thành công sau 5 giây
            const successAlert = document.getElementById('success-alert');
            if (successAlert) {
                setTimeout(function() {
                    successAlert.style.transition = 'all 0.5s ease-in-out';
                    successAlert.style.opacity = '0';
                    successAlert.style.transform = 'translateX(100%)';
                    setTimeout(function() {
                        successAlert.remove();
                    }, 500);
                }, 5000);
            }
        });
    </script>

    <!-- Khu vực nhúng Script riêng của từng View -->
    @RenderSection("scripts", required: false)
</body>
</html>
