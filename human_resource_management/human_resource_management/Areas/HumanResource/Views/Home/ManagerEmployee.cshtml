@model IEnumerable<human_resource_management.Models.NhanVien>
@* 
    MÔ TẢ VIEW: QUẢN LÝ DANH SÁCH NHÂN VIÊN
    ---------------------------------------------------------
    Đây là View hiển thị danh sách toàn bộ nhân viên trong hệ thống.
    - Model: IEnumerable<NhanVien> (Danh sách nhân viên)
    - Chức năng chính: 
      + Hiển thị danh sách dạng bảng.
      + Tìm kiếm theo nhiều tiêu chí (Tên, Mã, Phòng ban).
      + Phân trang dữ liệu.
      + Nút chuyển hướng sang trang Thêm mới và chi tiết chỉnh sửa.
*@

@{
    ViewBag.Title = "Quản lý nhân viên";
    Layout = "~/Areas/HumanResource/Views/Shared/_Layout.cshtml"; // Đảm bảo đường dẫn Layout đúng
}

@section styles {
    <style>
        .employee-card:hover {
            transform: translateY(-2px);
            transition: all 0.3s ease;
        }
    </style>
}

<div class="space-y-6 animate-fade-in">
    <!-- 1. TIÊU ĐỀ VÀ NÚT THÊM MỚI -->
    <!-- Sử dụng flexbox để bố trí tiêu đề bên trái và nút hành động bên phải -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 bg-white p-6 rounded-2xl shadow-sm border border-gray-100">
        <div>
            <h2 class="text-2xl font-bold text-gray-800">Danh sách nhân viên</h2>
            <p class="text-gray-500">Quản lý và theo dõi thông tin nhân sự trong toàn hệ thống</p>
        </div>
        <!-- Nút Thêm mới: Chuyển hướng về Action Create -->
        <a href="@Url.Action("Create", "Home")" class="inline-flex items-center justify-center gap-2 px-5 py-2.5 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-xl shadow-lg shadow-blue-200 transition-all active:scale-95">
            <i class="fa-solid fa-user-plus text-sm"></i>
            Thêm nhân viên
        </a>
    </div>

    <!-- 2. THANH TÌM KIẾM -->
    <!-- Form gửi dữ liệu theo phương thức GET về Action ManagerEmployee để lọc danh sách -->
    <div class="bg-white p-4 rounded-2xl shadow-sm border border-gray-100">
        @using (Html.BeginForm("ManagerEmployee", "Home", FormMethod.Get, new { @class = "w-full" }))
        {
            <div class="relative max-w-md">
                <button type="submit" class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400 hover:text-blue-600 bg-transparent border-none cursor-pointer transition-colors">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </button>

                <!-- Input tìm kiếm: Giá trị được giữ lại sau khi reload trang thông qua ViewBag.CurrentFilter -->
                <input type="text"
                       name="searchString"
                       value="@ViewBag.CurrentFilter"
                       placeholder="Tra cứu nhân viên theo tên, phòng ban, mã nhân viên..."
                       class="w-full pl-10 pr-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all">
            </div>
        }
    </div>

    <!-- 3. BẢNG DỮ LIỆU NHÂN VIÊN -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="bg-gray-50 border-b border-gray-200">
                        <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider whitespace-nowrap">
                            Mã nhân viên
                        </th>

                        <th class="px-4 py-3 text-center text-xs font-semibold text-gray-500 uppercase tracking-wider whitespace-nowrap">
                            Nhân viên
                        </th>

                        <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider whitespace-nowrap">
                            Chức danh & Phòng ban
                        </th>

                        <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider whitespace-nowrap">
                            Thông tin tài khoản
                        </th>

                        <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider whitespace-nowrap">
                            Hợp đồng hiện tại
                        </th>

                        <th class="px-4 py-3 text-center text-xs font-semibold text-gray-500 uppercase tracking-wider whitespace-nowrap">
                            Trạng thái
                        </th>

                        <th class="px-4 py-3 text-right text-xs font-semibold text-gray-500 uppercase tracking-wider whitespace-nowrap">
                            Thao tác
                        </th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    @* Duyệt qua từng nhân viên trong Model và hiển thị 1 dòng (tr) *@
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-gray-50/50 transition-colors group">
                            <td class="px-6 py-4 text-sm font-bold text-gray-600">
                                @item.maNV
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-3">
                                    <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center text-blue-600 font-bold border-2 border-white shadow-sm ring-1 ring-blue-50">
                                        @(item.hoTen != null && item.hoTen.Length > 0 ? item.hoTen.Substring(0, 1).ToUpper() : "N")
                                    </div>
                                    <div>
                                        <div class="font-bold text-gray-800">@item.hoTen</div>
                                        <div class="text-xs text-gray-500 flex items-center gap-1">
                                            <i class="fa-regular fa-envelope"></i> @item.email
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <div class="text-gray-700 font-medium">@item.chucVu</div>
                                <div class="text-xs text-blue-600 bg-blue-50 px-2 py-0.5 rounded-full inline-block mt-1">
                                    @(item.PhongBan != null ? item.PhongBan.tenPB : "Chưa phân phòng")
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                @if (item.TaiKhoan != null)
                                {
                                    <div class="text-gray-700">@item.TaiKhoan.tenTK</div>
                                    <div class="text-xs text-purple-600 font-medium italic">@item.TaiKhoan.vaiTro</div>
                                }
                                else
                                {
                                    <span class="text-xs text-red-400 italic">Chưa cấp tài khoản</span>
                                }
                            </td>
                            <td class="px-6 py-4 text-sm">
                                @{
                                    var currentContract = item.HopDongs?.OrderByDescending(h => h.ngayBatDau).FirstOrDefault();
                                    if (currentContract != null)
                                    {
                                        <div class="text-gray-700 font-medium">Loại @currentContract.loaiHD</div>
                                        <div class="text-xs text-gray-500">HSL: <span class="text-orange-600 font-bold">@currentContract.heSoLuong</span></div>
                                    }
                                    else
                                    {
                                        <span class="text-xs text-gray-400">Không có hợp đồng</span>
                                    }
                                }
                            </td>
                            <td class="px-6 py-4">
                                @if (item.trangThaiLamViec == "Đang làm việc")
                                {
                                    <span class="inline-flex items-center whitespace-nowrap px-2.5 py-1 text-xs font-semibold text-green-700 bg-green-100 rounded-lg">
                                        <i class="fa-solid fa-circle text-[6px] mr-1.5"></i> Đang làm việc
                                    </span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center whitespace-nowrap px-2.5 py-1 text-xs font-semibold text-gray-700 bg-gray-100 rounded-lg">
                                        <i class="fa-solid fa-circle text-[6px] mr-1.5"></i> @item.trangThaiLamViec
                                    </span>
                                }
                            </td>
                            <td class="px-6 py-4 text-right">
                                <div class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                    <button class="p-2 text-blue-600 hover:bg-blue-50 rounded-lg transition-colors" title="Xem chi tiết">
                                        <i class="fa-solid fa-eye"></i>
                                    </button>
                                    <button class="p-2 text-amber-600 hover:bg-amber-50 rounded-lg transition-colors" title="Chỉnh sửa hồ sơ">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- 4. XỬ LÝ TRƯỜNG HỢP KHÔNG CÓ DỮ LIỆU -->
        <!-- Nếu Model rỗng (không có nhân viên nào thỏa mãn điều kiện lọc) -->
        @if (!Model.Any())
        {
            <div class="p-12 text-center">
                <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fa-solid fa-user-slash text-2xl text-gray-400"></i>
                </div>
                <h3 class="text-lg font-medium text-gray-800">Không tìm thấy nhân viên nào</h3>
                <p class="text-gray-500">
                    @if (!string.IsNullOrEmpty(ViewBag.CurrentFilter))
                    {
                        <span>Không có kết quả cho từ khóa: "<b>@ViewBag.CurrentFilter</b>".</span>
                        <br />
                        <a href="@Url.Action("ManagerEmployee", "Home")" class="text-blue-600 hover:underline mt-2 inline-block">Xóa bộ lọc</a>
                    }
                    else
                    {
                        <span>Hãy bắt đầu bằng cách thêm nhân viên mới vào hệ thống.</span>
                    }
                </p>
            </div>
}

        <!-- 5. PHÂN TRANG -->
        <!-- Logic phân trang thủ công sử dụng các biến ViewBag truyền từ Controller -->
        @if (ViewBag.TotalPages > 1)
        {
            <div class="px-6 py-4 border-t border-gray-100 bg-gray-50 flex items-center justify-between">
                <!-- Thông tin trang hiện tại -->
                <div class="text-sm text-gray-500">
                    Hiển thị trang <span class="font-bold text-gray-800">@ViewBag.PageNumber</span> trên tổng số <span class="font-bold text-gray-800">@ViewBag.TotalPages</span>
                </div>
                
                <!-- Các nút điều hướng Trái/Phải -->
                <div class="flex items-center gap-2">
                    @* Nút Quay lại (Previous) *@
                    @if (ViewBag.HasPreviousPage)
                    {
                        <a href="@Url.Action("ManagerEmployee", new { page = ViewBag.PageNumber - 1, searchString = ViewBag.CurrentFilter })" class="px-4 py-2 bg-white border border-gray-200 rounded-lg text-sm font-medium text-gray-600 hover:bg-blue-50 hover:text-blue-600 hover:border-blue-200 transition-all">
                            <i class="fa-solid fa-chevron-left mr-1"></i> Trước
                        </a>
                    }
                    else
                    {
                        <span class="px-4 py-2 bg-gray-100 border border-gray-200 rounded-lg text-sm font-medium text-gray-400 cursor-not-allowed">
                            <i class="fa-solid fa-chevron-left mr-1"></i> Trước
                        </span>
                    }

                    @* Nút Tiếp theo (Next) *@
                    @if (ViewBag.HasNextPage)
                    {
                        <a href="@Url.Action("ManagerEmployee", new { page = ViewBag.PageNumber + 1, searchString = ViewBag.CurrentFilter })" class="px-4 py-2 bg-white border border-gray-200 rounded-lg text-sm font-medium text-gray-600 hover:bg-blue-50 hover:text-blue-600 hover:border-blue-200 transition-all">
                            Sau <i class="fa-solid fa-chevron-right ml-1"></i>
                        </a>
                    }
                    else
                    {
                        <span class="px-4 py-2 bg-gray-100 border border-gray-200 rounded-lg text-sm font-medium text-gray-400 cursor-not-allowed">
                            Sau <i class="fa-solid fa-chevron-right ml-1"></i>
                        </span>
                    }
                </div>
            </div>
        }
    </div>
</div>