@model IEnumerable<human_resource_management.Models.NhanVien>

@{
    ViewBag.Title = "Quản lý nhân viên";
    Layout = "~/Areas/HumanResource/Views/Shared/_Layout.cshtml";
}

@section styles {
    <style>
        /* Hiệu ứng bay lên nhẹ khi di chuột vào các thẻ hoặc dòng (nếu dùng card layout) */
        .employee-card:hover {
            transform: translateY(-2px);
            transition: all 0.3s ease;
        }
    </style>
}

<div class="space-y-6 animate-fade-in">
    <!-- Tiêu đề trang và Nút thêm mới -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 bg-white p-6 rounded-2xl shadow-sm border border-gray-100">
        <div>
            <h2 class="text-2xl font-bold text-gray-800">Danh sách nhân viên</h2>
            <p class="text-gray-500">Quản lý và theo dõi thông tin nhân sự trong toàn hệ thống</p>
        </div>
        <!-- Link điều hướng sang trang thêm mới nhân viên -->
        <a href="@Url.Action("Create", "Home")" class="inline-flex items-center justify-center gap-2 px-5 py-2.5 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-xl shadow-lg shadow-blue-200 transition-all active:scale-95">
            <i class="fa-solid fa-user-plus text-sm"></i>
             Thêm nhân viên
        </a>
    </div>

    <!-- Thanh tìm kiếm nhanh (Client-side Search) -->
    <div class="bg-white p-4 rounded-2xl shadow-sm border border-gray-100">
        <div class="relative max-w-md">
            <span class="absolute inset-y-0 left-0 flex items-center pl-3">
                <i class="fa-solid fa-magnifying-glass text-gray-400"></i>
            </span>
            <input type="text" id="employeeSearch" placeholder="Tra cứu nhân viên theo tên, phòng ban, mã nhân viên..." 
                   class="w-full pl-10 pr-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all">
        </div>
    </div>

    <!-- Bảng hiển thị dữ liệu nhân viên -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="bg-gray-50/50 border-b border-gray-100">
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider">Nhân viên</th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider">Chức danh & Phòng ban</th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider">Thông tin tài khoản</th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider">Hợp đồng hiện tại</th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider">Trạng thái</th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-right">Thao tác</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-gray-50/50 transition-colors group">
                            <!-- Cột: Tên và Avatar -->
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-3">
                                    <!-- Avatar tự động tạo từ chữ cái đầu của tên -->
                                    <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center text-blue-600 font-bold border-2 border-white shadow-sm ring-1 ring-blue-50">
                                        @item.hoTen.Substring(0, 1).ToUpper()
                                    </div>
                                    <div>
                                        <div class="font-bold text-gray-800">@item.hoTen</div>
                                        <div class="text-xs text-gray-500 flex items-center gap-1">
                                            <i class="fa-regular fa-envelope"></i> @item.email
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <!-- Cột: Phòng ban và Chức vụ -->
                            <td class="px-6 py-4">
                                <div class="text-gray-700 font-medium">@item.chucVu</div>
                                <div class="text-xs text-blue-600 bg-blue-50 px-2 py-0.5 rounded-full inline-block mt-1">
                                    @(item.PhongBan != null ? item.PhongBan.tenPB : "Chưa phân phòng")
                                </div>
                            </td>
                            <!-- Cột: Tên đăng nhập và vai trò -->
                            <td class="px-6 py-4">
                                @if (item.TaiKhoan != null)
                                {
                                    <div class="text-gray-700">@item.TaiKhoan.tenTK</div>
                                    <div class="text-xs text-purple-600 font-medium italic">@item.TaiKhoan.vaiTro</div>
                                }
                                else
                                {
                                    <span class="text-xs text-red-400 italic">Chưa cấp tài khoản</span>
                                }
                            </td>
                            <!-- Cột: Chi tiết hợp đồng mới nhất -->
                            <td class="px-6 py-4 text-sm">
                                @{
                                    // Lấy hợp đồng mới nhất của nhân viên
                                    var currentContract = item.HopDongs?.OrderByDescending(h => h.ngayBatDau).FirstOrDefault();
                                    if (currentContract != null)
                                    {
                                        <div class="text-gray-700 font-medium">Loại @currentContract.loaiHD</div>
                                        <div class="text-xs text-gray-500">HSL: <span class="text-orange-600 font-bold">@currentContract.heSoLuong</span></div>
                                    }
                                    else
                                    {
                                        <span class="text-xs text-gray-400">Không có hợp đồng</span>
                                    }
                                }
                            </td>
                            <!-- Cột: Trạng thái hiển thị bằng Badge màu sắc -->
                            <td class="px-6 py-4">
                                @if (item.trangThaiLamViec == "Đang làm việc")
                                {
                                    <span class="px-2.5 py-1 text-xs font-semibold text-green-700 bg-green-100 rounded-lg">
                                        <i class="fa-solid fa-circle text-[8px] mr-1"></i> Đang làm việc
                                    </span>
                                }
                                else
                                {
                                    <span class="px-2.5 py-1 text-xs font-semibold text-gray-700 bg-gray-100 rounded-lg">
                                        <i class="fa-solid fa-circle text-[8px] mr-1"></i> @item.trangThaiLamViec
                                    </span>
                                }
                            </td>
                            <!-- Cột: Các nút chức năng (Chỉ hiện khi di chuột vào dòng) -->
                            <td class="px-6 py-4 text-right">
                                <div class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                    <button class="p-2 text-blue-600 hover:bg-blue-50 rounded-lg transition-colors" title="Xem chi tiết">
                                        <i class="fa-solid fa-eye"></i>
                                    </button>
                                    <button class="p-2 text-amber-600 hover:bg-amber-50 rounded-lg transition-colors" title="Chỉnh sửa hồ sơ">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        <!-- Hiển thị khi danh sách nhân viên trống -->
        @if (!Model.Any())
        {
            <div class="p-12 text-center">
                <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fa-solid fa-user-slash text-2xl text-gray-400"></i>
                </div>
                <h3 class="text-lg font-medium text-gray-800">Không tìm thấy nhân viên nào</h3>
                <p class="text-gray-500">Hãy bắt đầu bằng cách thêm nhân viên mới vào hệ thống.</p>
            </div>
        }
    </div>
</div>
