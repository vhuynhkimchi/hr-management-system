<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Cổng Thông Tin Nhân Viên</title>
    
    <!-- Thiết kế & Font chữ -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f3f4f6; /* gray-100 */
        }
        .nav-item.active {
            background-color: #eff6ff; /* blue-50 */
            color: #2563eb; /* blue-600 */
            border-right: 3px solid #2563eb;
        }
        .nav-item:hover:not(.active) {
            background-color: #f9fafb; /* gray-50 */
            color: #1f2937; /* gray-800 */
        }
    </style>
</head>
<body class="bg-gray-100 min-h-screen flex text-sm">

    <!-- Sidebar (Thanh bên) -->
    <aside class="w-64 bg-white shadow-xl hidden md:flex flex-col fixed inset-y-0 z-50 transition-all duration-300">
        <!-- Khu vực Logo -->
        <div class="h-16 flex items-center justify-center border-b border-gray-100">
            <div class="flex items-center gap-2 text-blue-600">
                <i class="fa-solid fa-users-gear text-2xl"></i>
                <span class="text-xl font-bold tracking-tight text-gray-800">HRM System</span>
            </div>
        </div>

        <!-- Điều hướng -->
        <nav class="flex-1 overflow-y-auto py-6 px-3 space-y-1">
            
            <p class="px-3 text-xs font-semibold text-gray-400 uppercase tracking-wider mb-2">Chức năng chính</p>
            
            <!-- Trang chủ -->
            <a href="@Url.Action("Index", "HomeEmployee", new { area = "Employee" })" 
               class="nav-item flex items-center px-4 py-3 text-gray-600 rounded-lg transition-colors group">
                <i class="fa-solid fa-house w-6 text-center group-hover:scale-110 transition-transform"></i>
                <span class="font-medium">Trang chủ</span>
            </a>

            <!-- Thông tin cá nhân -->
            <a href="@Url.Action("Info", "HomeEmployee", new { area = "Employee" })" 
               class="nav-item flex items-center px-4 py-3 text-gray-600 rounded-lg transition-colors group">
                <i class="fa-solid fa-user-tag w-6 text-center group-hover:scale-110 transition-transform"></i>
                <span class="font-medium">Thông tin cá nhân</span>
            </a>

            <!-- Lịch làm việc -->
            <a href="@Url.Action("Schedule", "HomeEmployee", new { area = "Employee" })" 
               class="nav-item flex items-center px-4 py-3 text-gray-600 rounded-lg transition-colors group">
                <i class="fa-solid fa-calendar-days w-6 text-center group-hover:scale-110 transition-transform"></i>
                <span class="font-medium">Lịch làm việc</span>
            </a>

            <!-- Bảng lương -->
            <a href="@Url.Action("Salary", "HomeEmployee", new { area = "Employee" })" 
               class="nav-item flex items-center px-4 py-3 text-gray-600 rounded-lg transition-colors group">
                <i class="fa-solid fa-file-invoice-dollar w-6 text-center group-hover:scale-110 transition-transform"></i>
                <span class="font-medium">Bảng lương</span>
            </a>
        </nav>

        <!-- Xem nhanh thông tin người dùng (Cuối Sidebar) -->
    </aside>

    <!-- Header trên Mobile -->
    <div class="md:hidden fixed w-full bg-white z-50 border-b border-gray-200 h-16 flex items-center justify-between px-4">
        <span class="font-bold text-lg text-gray-800">HRM Employee</span>
        <button class="text-gray-600 focus:outline-none">
            <i class="fa-solid fa-bars text-xl"></i>
        </button>
    </div>

    <!-- Khu vực nội dung chính -->
    <div class="flex-1 md:ml-64 flex flex-col min-h-screen transition-all duration-300">
        
        <!-- Navbar phía trên -->
        <header class="bg-white shadow-sm h-16 flex items-center justify-between px-6 sticky top-0 z-40">
            <!-- Tiêu đề trang / Breadcrumb -->
            <h1 class="text-xl font-semibold text-gray-800">@ViewBag.Title</h1>

            <!-- Các hành động bên phải -->
            <div class="flex items-center space-x-4">
                <!-- Đăng xuất -->
                @using (Html.BeginForm("Logout", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm" }))
                {
                    @Html.AntiForgeryToken()
                    <button type="submit" class="flex items-center gap-2 text-red-600 hover:text-red-700 font-medium text-sm bg-red-50 hover:bg-red-100 px-3 py-2 rounded-lg transition-colors">
                        <i class="fa-solid fa-arrow-right-from-bracket"></i>
                        <span>Đăng xuất</span>
                    </button>
                }
            </div>
        </header>

        <!-- Nội dung chính -->
        <main class="flex-1 p-6 overflow-y-auto">
            <div class="max-w-7xl mx-auto">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="mb-4 bg-green-50 border-l-4 border-green-500 p-4 rounded shadow-sm">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <i class="fa-solid fa-circle-check text-green-500"></i>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm text-green-700">@TempData["SuccessMessage"]</p>
                            </div>
                        </div>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="mb-4 bg-red-50 border-l-4 border-red-500 p-4 rounded shadow-sm">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <i class="fa-solid fa-circle-exclamation text-red-500"></i>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm text-red-700">@TempData["ErrorMessage"]</p>
                            </div>
                        </div>
                    </div>
                }
                @RenderBody()
            </div>
        </main>

        <!-- Chân trang -->
        <footer class="bg-white border-t border-gray-200 py-4 px-6">
            <div class="text-center text-xs text-gray-500">
                &copy; @DateTime.Now.Year Hệ thống Quản lý Nhân sự. All rights reserved.
            </div>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>

    <script>
        // Đánh dấu trạng thái active đơn giản dựa trên URL hiện tại
        document.addEventListener("DOMContentLoaded", function () {
            const currentPath = window.location.pathname.toLowerCase();
            const navLinks = document.querySelectorAll('.nav-item');
            
            navLinks.forEach(link => {
                const href = link.getAttribute('href').toLowerCase();
                // Xóa class active trước
                link.classList.remove('active');
                
                // Thêm class active nếu khớp chính xác hoặc là đường dẫn con (tránh khớp mỗi '/')
                // Ưu tiên khớp chính xác để tránh highlight nhiều mục
                if (currentPath === href) {
                    link.classList.add('active');
                } else if (href !== '/' && currentPath.includes(href) && href.length > 3) {
                     // Kiểm tra xem có link nào khớp hơn không (khớp chuỗi dài hơn)
                     // Nếu đã tìm thấy khớp chính xác thì sẽ không vào đây.
                     // Kiểm tra đơn giản này ngăn 'Trang chủ' vẫn active khi đang ở 'Home/Info' nếu không xử lý kỹ
                     // Nhưng hiện tại giữ đơn giản: Khớp chính xác hoặc bắt đầu bằng
                     if(currentPath.startsWith(href)) {
                        link.classList.add('active');
                     }
                }
            });

             // Sửa lỗi cụ thể cho action "Index" thường chỉ là đường dẫn controller
            // Nếu không có gì active, thử highlight cái khớp phần đầu
            // Vòng lặp này để đảm bảo không có nhiều item đang active
            let activeLinks = document.querySelectorAll('.nav-item.active');
            if (activeLinks.length > 1) {
                // Giữ lại href khớp dài nhất
                let bestMatch = activeLinks[0];
                activeLinks.forEach(link => {
                    if (link.getAttribute('href').length > bestMatch.getAttribute('href').length) {
                        bestMatch = link;
                    }
                    link.classList.remove('active');
                });
                bestMatch.classList.add('active');
            }
        });
    </script>
</body>
</html>
